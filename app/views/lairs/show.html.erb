<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "#", class: "navbar-brand" do %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  </div>
</div>


<div class = "container">
  <div class = "lair_info my-3 border-top col-12 mx-auto">
    <h3 class= "border-bottom col-6 mx-auto"><%= @lair.title %></h3>
    <% @lair.photos.each do |photo| %>
      <%= cl_image_tag photo.key, width: 300, class: "small-photo"  %>
    <% end %>
    <h3><%= @lair.description %></h3>
    <h3>Price: <%= @lair.price %></h3>
    <h3>Location: <%= @lair.location %></h3>
    <h3>Category: <%= @lair.category %></h3>
    <h3>Villan: <%= @lair.user.first_name %> <%= @lair.user.last_name %></h3>
  </div>
</div>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Lairbnb Lairs</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="styles.css">
  <style>
    /* Custom CSS styles */
    .carousel-item img {
      height: 400px;
      border: none; /* Remove border */
      border-radius: 20px; /* Add border-radius for rounded corners */
    }

    .lair-title {
      font-weight: bold;
      color: black;
      font-size: 20px;
    }

    .lair-price {
      font-weight: bold;
      color: #8B0000;
    }

    .btn-custom {
      background-color: #007bff;
      color: white;
      border-color: #007bff;
    }

    .btn-custom:hover {
      background-color: #0056b3;
      color: white;
    }

    .btn-container {
      position: absolute;
      bottom: 20px;
      right: 20px;
    }

    .card {
      margin-bottom: 20px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      border-radius: 20px; /* Added border-radius for more rounded corners */
    }

    .card-body {
      padding: 15px; /* Adjust card body padding */
    }

    /* Adjust map width */
    #map-container {
      width: 80%;
      margin: auto;
    }

    /* Added animation styles */
    .title {
      font-size: 3em;
      color: #8B0000;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); /* Add text-shadow for better visibility */
      animation: bounce 1.5s infinite alternate;
    }

    @keyframes bounce {
      0% {
        transform: translateY(0);
      }
      100% {
        transform: translateY(-10px);
      }
    }
  </style>
</head>
<body>

<!-- Opening Animation -->
<h1 class="title text-center my-4">Welcome to the Dark Side ðŸ˜ˆ</h1> <!-- Evil emoji added to the title -->

<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8 my-3">
      <!-- Search form -->
      <!-- I've removed Ruby on Rails ERB tags for simplicity -->
      <form action="/lairs" method="get" class="d-flex">
        <input type="text" name="query" class="form-control" placeholder="Type a keyword">
        <button type="submit" class="btn btn-primary">Search</button>
      </form>
    </div>
  </div>
  <div class="row">
    <!-- Lair cards -->
    <!-- I've removed Ruby on Rails ERB tags for simplicity -->
    <div class="col-md-6 mb-4">
      <div class="card position-relative">
        <!-- Lair photo carousel -->
        <div id="carousel1" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <!-- Carousel items -->
            <div class="carousel-item active">
              <img src="https://via.placeholder.com/800x400" class="d-block w-100 img-fluid" alt="Lair Image">
            </div>
            <!-- Add more carousel items here if needed -->
          </div>
          <!-- Carousel navigation -->
          <a class="carousel-control-prev" href="#carousel1" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carousel1" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
        <div class="card-body">
          <!-- Lair title -->
          <h5 class="card-title lair-title">Lair Title</h5>
          <!-- Lair price -->
          <p class="card-text"><strong>Price:</strong> <span class="lair-price">$100</span></p>
          <!-- View lair button -->
          <div class="btn-container">
            <a href="#" class="btn btn-custom">View Lair</a>
          </div>
        </div>
      </div>
    </div>
    <!-- Add more lair cards here if needed -->
  </div>
</div>

<!-- Map container -->
<div id="map-container" style="height: 600px;"></div>

<!-- JavaScript dependencies -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<!-- Opening Animation JavaScript -->
<script>
  window.onload = function() {
    var audio = new Audio('evil_laughter.mp3');
    audio.play();
  };
</script>

</body>
</html>

<div class="container">
  <h1 class="text-center my-4">All Lairbnb Lairs ðŸ˜ˆ</h1>

  <div class="row">
    <% @lairs.each do |lair| %>
  <div class="col-lg-3 col-md-4 col-sm-6 mb-4"> <!-- Adjust column widths for responsiveness -->
    <div class="card position-relative">
      <!-- Lair photo carousel -->
      <div id="carousel<%= lair.id %>" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <% lair.photos.each_with_index do |photo, index| %>
            <div class="carousel-item <%= 'active' if index.zero? %>">
              <%= cl_image_tag photo.key, crop: :fill, class: "d-block w-100 img-fluid" %>
            </div>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carousel<%= lair.id %>" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel<%= lair.id %>" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      <div class="card-body">
      <div class="title-container">
        <h5 class="card-title lair-title"><%= lair.title %></h5>
        <p class="card-text"><strong></strong> <span class="star">&#9733;</span> <%= rand(2.0..5.0).round(2) %></p>
      </div>
        <p class="card-text"><strong>Â£</strong> <span class="lair-price"><%= lair.price %></span></p>
      <div class="btn-container">
        <%= link_to "View Lair", lair_path(lair), class: "btn btn-custom" %>
      </div>
    </div>

    </div>
  </div>
<% end %>

  </div>
</div>

<div id="map-container" style="height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

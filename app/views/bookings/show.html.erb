<h1>Bookings</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Start_date</th>
      <th>End_date</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= booking.lair.title %></td>
       <td><%= booking.start_date.strftime("%Y-%m-%d") %></td>
       <td><%= booking.end_date.strftime("%Y-%m-%d") %></td>
        <td><%= booking.accepted ? "Confirmed" : "Pending" %></td>
        <td><%= booking.booking_id %></td>
        <td>
          <% if booking.accepted %>
            <%= link_to "Cancel", confirmation_booking_path(booking), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
          <% else %>
            <%= link_to "Confirm", confirmation_booking_path(booking), method: :patch, class: "btn btn-sm btn-success" %>
          <% end %>
        </td>
      </tr>
  </tbody>
</table>
